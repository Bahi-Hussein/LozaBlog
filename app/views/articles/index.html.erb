<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= image_tag(article.image.url, size: "250x150") if article.image? %></td>
        <td><%= article.title %> By (<%= article.user.name %>)</td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Like", like_article_path(article, like: true), method: :post %></td>
        <td>likes: <%= article.likes_total %></td>
        <td>Dislikes: <%= article.dislikes_total %> </td>
      </tr>
      <tr><%= render article.tags %></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
