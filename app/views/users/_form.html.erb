<%= render 'shared/errors', obj: @user%>

<%= form_for @user do |f| %>

	<%= f.label :name, "Username" %>
	<%= f.text_field :name %>

	<%= f.label :desc, "Description" %>
	<%= f.text_field :desc %>

	<%= f.label :email, "Email" %>
	<%= f.text_field :email %>

	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>

	<%= f.submit("Submit") %>

<% end %>